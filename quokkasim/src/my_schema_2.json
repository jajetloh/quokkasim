{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/product.schema.json",
    "title": "Product",
    "description": "A product from Acme's catalog",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique identifier for this model",
            "type": "string"
        },
        "name": {
            "description": "Short human-readable identifier for this model",
            "type": "string"
        },
        "description": {
            "description": "Free-text field for further model context",
            "type": "string"
        },
        "loggers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Unique logger name",
                        "type": "string"
                    },
                    "record_type": {
                        "enum": ["ArrayStockLog", "QueueStockLog", "TruckingProcessLog", "TruckAndOreStockLog"]
                    },
                    "log_path": {
                        "description": "Destination path of the log file",
                        "type": "string"
                    }
                },
                "required": ["name", "record_type", "log_path"]
            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Unique component name",
                        "type": "string"
                    },
                    "type": {
                        "enum": ["ArrayStock", "LoadingProcess", "TruckStock", "TruckMovementProcess", "DumpingProcess"]
                    },
                    "loggers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["name", "type"]
            }
        }
    }
}